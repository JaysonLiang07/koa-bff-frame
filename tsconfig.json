{
  "compilerOptions": {
    "target": "ES2020",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "module": "commonjs",                    // 改为 commonjs
    "moduleResolution": "node",              // 改为 node
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["typings"],
    "baseUrl": "./",
    "paths": {
      "@interfaces/*": ["interface/*"],
      "@config/*": ["config/*"],
      "@middlewares/*": ["middlewares/*"]
    }
  },
  "include": ["**/*"],
  "ts-node": {
    "esm": false                            // 添加这个
  }
}